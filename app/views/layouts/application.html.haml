  %head
    %title TextBook Swap!
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags


  %body
  
    #wrapper.other

      #sign
        = link_to image_tag('logo.png', :size =>'300x45'), '/'

      #top 
        %h1.title
          #logo 
            TextBook Swap
        #phrase 
          Buying and Selling TextBooks Has Never Been Easier
    
